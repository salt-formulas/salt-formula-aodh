        'webserved': ['aodh-api'],
        'notification': {
          'topics': 'notifications'
        },
        'oslo_policy': {
          'policy_file': '/etc/aodh/policy.json'
        },
        'logging': {
          'log_appender': false,
          'log_handlers': {
            'watchedfile': {
              'enabled': true
            },
          }
        },
